{
  "extends": ["bloq", "prettier"],
  "overrides": [
    {
      "extends": ["bloq/node", "prettier"],
      "files": "scripts/**/*.js",
      "rules": {
        "no-console": "off"
      }
    },
    {
      "extends": ["bloq/markdown"],
      "files": ["*.md"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "root": true
}
